#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

<PongGame>: 
    size_hint: 1,1
    Main_box:
        
        Add_table:
        
<Main_box>:
    cols: 2
    size_hint_y :  None
    size_hint_x :  None
    padding: 0
    spacing: 100,0
    pos_hint:{"center_x":0.35,"center_y":0.95}
    row_default_width: root.width 
    row_force_default: True
    row_default_height : root.height

<Table>
    padding:0,0,0,0
    orientation: 'horizontal'
    adaptive_height: True
    adaptive_width: True
    md_bg_color: get_color_from_hex("#ecd4c2") #Temp Color
    MDRaisedButton:
        pos_hint: {'center_x': 0.0, 'center_y': 0.5}
        
        text: root.table_name
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#FFFFFF")
        md_bg_color: get_color_from_hex("#ecd4c2") #Temp Color
        
    MDIconButton:
        on_release: root.open_menu(self,root.menu)
        icon: "dots-vertical"

<Add_table>
    orientation: 'horizontal'
    adaptive_height: True
    adaptive_width: True
    padding:0,0,0,0
    #halign: 'center'        #default anyway
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    MDIconButton:
        md_bg_color: get_color_from_hex("#ecd4c2") #Temp Color
        on_release: self.parent.parent.add_table()
        icon: "plus-circle"
<Content>
    orientation: "vertical"
    spacing: "6dp"
    size_hint_y: None
    height: "60dp"
    MDTextField:
    
<Item>
    padding:5,0,0,0
    adaptive_size:True
    font_style: "Caption"
    IconLeftWidget:
        icon: root.left_icon
        adaptive_size:True
        disabled:True

        
    MDLabel:
        
